{
  "compilerOptions": {
    "target": "ES2020",                // Update naar een recentere ES-versie voor betere async/await ondersteuning
    "module": "CommonJS",               // Correct voor Node.js
    "rootDir": "./src",                 // Zorgt ervoor dat je TypeScript-bestanden zich in 'src' bevinden
    "outDir": "./dist",                 // De gecompileerde JavaScript-bestanden komen in 'dist'
    "strict": true,                      // Houd strict mode aan voor betere type-checking
    "esModuleInterop": true,             // Zorgt voor betere compatibiliteit met ES-modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                               /* Skip type checking all .d.ts files. */
  }
}
